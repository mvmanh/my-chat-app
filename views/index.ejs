<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>WebSocket Chat v.31 (modifed)</h1>
    <h3 style="color:red">Test kiểm tra s3, lần 2</h3>
    <h3 style="color:red">Test kiểm tra s3, lần 2</h3>
    <h3 style="color:red">Test kiểm tra s3, lần 2</h3>
    <input type="text" id="message">
    <button id="send">Send</button>
    <ul id="messages">

    </ul>

    <script>
        const host = window.location.hostname;
        const port = window.location.port;

        // Construct the WebSocket URL dynamically
        const websocketURL = `ws://${host}:${port}`;
        const client = new WebSocket(websocketURL)

        client.onopen = () => display('Connected to server')
        client.onmessage = msg => {
            console.log(msg)
            display(msg.data)
        }


        send.addEventListener('click', sendMessage)

        function sendMessage() {
            const text = message.value
            message.value = ''
            client.send(text)
        }

        function display(msg) {
            const li = document.createElement('li')
            li.innerHTML = msg
            messages.append(li)
        }
    </script>
</body>
</html>